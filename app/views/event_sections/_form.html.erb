<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for([@event, @event_section]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>
      <%= f.input :description %>

      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to 'Back', event_event_sections_path(@event), class: "btn btn-default pull-right" %>
    <% end %>
  </div>
</div>
