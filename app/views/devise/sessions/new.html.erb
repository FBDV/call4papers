<div class="row">
  <div class="col-xs-12 content--custom">
    <div class="page-header"><h1><%=t(:log_in, scope: :devise)%></h1></div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div  class="login-form">
        <%=flash_messages%>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-user"}, placeholder: "Digite seu email" %>
          <%= f.input :password, required: false, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-lock"}, placeholder: "Digite seu email" %>
        </div>
        <%= f.input :remember_me, as: :boolean, input_html: { data: { toggle: :checkbox } }, wrapper: false if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, t(:log_in, scope: :devise), class: "btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
