<div class="row">
  <div class="col-xs-12 content--custom">
    <div class="page-header"><h1><%=t(:sign_up, scope: :devise)%></h1></div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div  class="login-form">
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-user"}, placeholder: "Nome" %>
          <%= f.input :email, required: true, autofocus: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-mail"}, placeholder: "E-mail" %>
          <%= f.input :password, required: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-lock"}, placeholder: "Senha" %>
          <%= f.input :password_confirmation, required: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-lock"}, placeholder: "Confirme sua Senha" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t(:sign_up, scope: :devise), class: "btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
