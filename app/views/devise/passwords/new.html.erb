<div class="row">
  <%=flash_messages%>
  <div class="col-xs-12 content--custom">
    <div class="page-header"><h1><%=t(:forgot_your_password, scope: :devise)%></h1></div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div  class="login-form">
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: "&nbsp;".html_safe, label_html: {class: "login-field-icon fui-user"}, placeholder: "Digite seu email" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Me envie instruções de recuperação", class: "btn btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
