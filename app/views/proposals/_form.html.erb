<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for([@event, @event_section, @proposal]) do |f| %>
      <%= f.error_notification %>

      <%= f.input :title %>
      <%= f.input :public_description %>
      <%= f.input :private_description %>

      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to 'Back', event_path(@event), class: "btn btn-default pull-right" %>
    <% end %>
  </div>
</div>
