<h1><%=@event.name%></h1>

<div class="row">
  <div class="col-md-4 sidebar">
    <div class="thumbnail">
      <%=image_tag @event.logo.url%>
      <div class="caption">
        <p><%=@event.description%></p>
        <hr>
        <p><%=@event.date%></p>
        <p><%=link_to @event.url, @event.url%></p>
        <hr>
        <h4>Organizer</h4>
        <p><%=@event.user.name%></p>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <h1>Proposals</h1>
  </div>
</div>
